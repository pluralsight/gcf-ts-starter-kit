{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "checkJs": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "watch": false,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": ["**/src/**/*.ts"],
  "exclude": ["prettier.config.js", "./build/*", "node_modules"]
}
